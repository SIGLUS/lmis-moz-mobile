<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@drawable/border_bottom_black"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_row_header"
        style="@style/RapidTestForm.RowHeading"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/rapid_view_view_left_padding"
        android:gravity="left|center"
        android:text="Farmácia Pública" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <org.openlmis.core.view.holder.RapidRecyclerView
            android:id="@+id/rv_rapid_report_grid_item_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:overScrollMode="never" />
    </LinearLayout>
</LinearLayout>