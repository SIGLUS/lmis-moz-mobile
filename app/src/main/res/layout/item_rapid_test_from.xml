<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/ItemRnr.Container"
    android:layout_width="@dimen/rapid_view_basic_form_width"
    android:layout_height="44dp"
    android:background="@drawable/border_bottom_black">

    <TextView
        android:id="@+id/tv_code"
        style="@style/ItemRnr.AmountText"
        android:layout_width="@dimen/rapid_view_basic_form_item_width"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_name"
        style="@style/ItemRnr.AmountText"
        android:layout_width="@dimen/rapid_view_basic_form_item_width"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/et_stock"
        style="@style/ItemRnr.AmountText"
        android:layout_width="@dimen/rapid_view_basic_form_item_width"
        android:layout_height="wrap_content"
        android:background="@null"
        android:inputType="number"
        android:enabled="false" />

    <TextView
        android:id="@+id/tv_received"
        style="@style/ItemRnr.AmountText"
        android:layout_width="70dp"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_issue"
        style="@style/ItemRnr.AmountText"
        android:layout_width="70dp"
        android:layout_height="wrap_content" />


    <TextView
        android:id="@+id/tv_adjustment"
        style="@style/ItemRnr.AmountText"
        android:layout_width="156dp"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_expire"
        style="@style/ItemRnr.AmountText"
        android:layout_width="97dp"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/et_inventory"
        style="@style/ItemRnr.AmountText"
        android:layout_width="97dp"
        android:layout_height="wrap_content"
        android:background="@null"
        android:inputType="numberSigned"
        android:enabled="false" />

</LinearLayout>
