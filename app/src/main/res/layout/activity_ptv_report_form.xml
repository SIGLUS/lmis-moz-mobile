<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/ll_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/margin_tiny"
        android:layout_marginRight="@dimen/margin_tiny"
        android:layout_marginTop="@dimen/margin_tiny"
        android:background="@drawable/border_black"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@drawable/border_bottom_black"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/border_right_black"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/total_woman"
                    android:textColor="@color/color_black"
                    android:textSize="@dimen/font_size_normal"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/et_total_woman"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:gravity="center"
                    android:hint="@string/total_woman"
                    android:inputType="number" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/total_child"
                    android:textColor="@color/color_black"
                    android:textSize="@dimen/font_size_normal"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/et_total_child"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:gravity="center"
                    android:hint="@string/total_child"
                    android:inputType="number" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/border_bottom_black"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@drawable/border_right_black"
                android:gravity="center"
                android:text="@string/header_ptv_name"
                android:textColor="@color/color_black"
                android:textSize="@dimen/font_size_regular"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="8"
                android:background="@drawable/border_right_black"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_product_name1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/border_right_black"
                        android:gravity="center"
                        android:textColor="@color/color_black"
                        android:textSize="@dimen/font_size_tiny"
                        tools:text="Product1" />

                    <TextView
                        android:id="@+id/tv_product_name2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/border_right_black"
                        android:gravity="center"
                        android:textColor="@color/color_black"
                        android:textSize="@dimen/font_size_tiny"
                        tools:text="Product2" />

                    <TextView
                        android:id="@+id/tv_product_name3"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/border_right_black"
                        android:gravity="center"
                        android:textColor="@color/color_black"
                        android:textSize="@dimen/font_size_tiny"
                        tools:text="Product3" />

                    <TextView
                        android:id="@+id/tv_product_name4"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/border_right_black"
                        android:gravity="center"
                        android:textColor="@color/color_black"
                        android:textSize="@dimen/font_size_tiny"
                        tools:text="Product4" />

                    <TextView
                        android:id="@+id/tv_product_name5"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textColor="@color/color_black"
                        android:textSize="@dimen/font_size_tiny"
                        tools:text="Product5" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@drawable/border_right_black"
                android:gravity="center"
                android:text="@string/initial_stock"
                android:textColor="@color/color_black"
                android:textSize="@dimen/font_size_regular"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="8"
                android:background="@drawable/border_right_black"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_initial_stock1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/border_right_black"
                        android:gravity="center"
                        android:textColor="@color/color_black"
                        android:textSize="@dimen/font_size_regular"
                        tools:text="Product1" />

                    <TextView
                        android:id="@+id/tv_initial_stock2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/border_right_black"
                        android:gravity="center"
                        android:textColor="@color/color_black"
                        android:textSize="@dimen/font_size_regular"
                        tools:text="Product2" />

                    <TextView
                        android:id="@+id/tv_initial_stock3"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/border_right_black"
                        android:gravity="center"
                        android:textColor="@color/color_black"
                        android:textSize="@dimen/font_size_regular"
                        tools:text="Product3" />

                    <TextView
                        android:id="@+id/tv_initial_stock4"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/border_right_black"
                        android:gravity="center"
                        android:textColor="@color/color_black"
                        android:textSize="@dimen/font_size_regular"
                        tools:text="Product4" />

                    <TextView
                        android:id="@+id/tv_initial_stock5"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textColor="@color/color_black"
                        android:textSize="@dimen/font_size_regular"
                        tools:text="Product5" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_ptv_report_information"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/action_panel"
        android:layout_below="@+id/ll_container"
        android:layout_marginLeft="@dimen/margin_tiny"
        android:layout_marginRight="@dimen/margin_tiny"
        android:overScrollMode="never" />

    <org.openlmis.core.view.widget.ActionPanelView
        android:id="@+id/action_panel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />

</RelativeLayout>