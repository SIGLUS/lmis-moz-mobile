<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
  style="@style/Card.Padded"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:orientation="vertical">

  <LinearLayout
    style="@style/ItemRnr.Type2Container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
      android:id="@+id/tv_period"
      style="@style/ItemRnr.PeriodTextType2"
      android:drawableLeft="@drawable/ic_description"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:textColor="@color/color_white"
      android:background="@color/color_draft_title" />

    <TextView
      android:id="@+id/tv_report_status"
      style="@style/ItemRnr.MessageTextType2"
      android:text="@string/msg_patient_data_report_missing"
      android:layout_width="match_parent"
      android:layout_height="wrap_content" />

    <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="horizontal">

      <TextView
        android:id="@+id/btn_create_patient_data_report"
        style="@style/FormAction.CompleteBtn"
        android:layout_marginLeft="@dimen/margin_medium"
        android:gravity="center"
        android:textAllCaps="true"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/button_height_default"
        android:layout_marginBottom="@dimen/margin_small"
        android:text="@string/btn_create_malaria_report" />

    </LinearLayout>


  </LinearLayout>
</androidx.cardview.widget.CardView>
