<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ScrollView
            android:id="@+id/rapid_test_top_left_scrollview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/rapid_test_top_left_layout"
                android:layout_width="@dimen/rapid_view_basic_form_item_width"
                android:layout_height="match_parent"
                android:background="#0ff"
                android:orientation="vertical" />
        </ScrollView>

        <org.openlmis.core.view.widget.RnrFormHorizontalScrollView
            android:id="@+id/rapid_test_top_scrollview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/program_from_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:background="@drawable/border_right_bottom_rapid_test_header"
                android:orientation="vertical" />
        </org.openlmis.core.view.widget.RnrFormHorizontalScrollView>
    </LinearLayout>
</merge>